<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class="mt-4">
  <h1 class="mb-4 text-4xl font-black">Assessments</h1>
</div>
<%= render partial: "assessment", locals: { assessments: @assessments } %>
<div class="mt-4">
  <%= link_to "New", new_assessment_path, class: "btn-main" %>
</div>