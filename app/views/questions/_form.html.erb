<div class="mt-10 sm:mt-0">
  <div class="md:grid md:gap-6">
    <div class="mt-5 md:col-span-2 md:mt-0">
      <%= form_with(model: @question) do |form| %>
        <div class="overflow-hidden shadow sm:rounded-md">
          <div class="bg-white px-4 py-5 sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-12 sm:col-span-12">
                <%= form.label :label, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :label, placeholder: "title...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div class="col-span-12 sm:col-span-12">
                <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_area :description, placeholder: "title...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div class="col-span-12 sm:col-span-12">
                <%= form.label :question_type, class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_area :question_type, placeholder: "title...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>
          </div>
          <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <%= form.submit "Save", class: "inline-flex justify-center btn-main" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>