<div class="mt-10 sm:mt-0">
  <div class="md:grid md:gap-6">
    <div class="mt-5 md:col-span-2 md:mt-0">
      <%= form_with(model: @question) do |form| %>
        <div class="overflow-hidden shadow sm:rounded-md">
          <div class="bg-white px-4 py-5 sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-12 sm:col-span-12">
                <%= form.label :label, class: "form-label" %>
                <%= form.text_field :label, placeholder: "title...", default_value: @question.label, class: "form-field" %>
              </div>

              <div class="col-span-12 sm:col-span-12">
                <%= form.label :description, class: "form-label" %>
                <%= form.text_area :description, placeholder: "description...", default_value: @question.description, class: "form-field" %>
              </div>

              <div class="col-span-12 sm:col-span-12">
                <%= form.label :question_type, class: "form-label" %>
                <%= form.select(:question_type, Question::QUESTION_TYPES, { include_blank: false }, { class: "form-field" }) %>
              </div>
            </div>
          </div>
          <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <%= link_to "Cancel", questions_path, class: "btn-secondary" %>
            <%= form.submit "Save", class: "inline-flex justify-center btn-main" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>