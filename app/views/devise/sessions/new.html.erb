<div class="mt-4">
  <h5 class="mb-4 text-4xl font-black">Log In</h5>
</div>

<div class="mt-10 sm:mt-0">
  <div class="md:grid md:gap-6">
    <div class="mt-5 md:col-span-2 md:mt-0">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="overflow-hidden shadow sm:rounded-md">
          <div class="bg-white px-4 py-5 sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-12 sm:col-span-12">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
              </div>

              <div class="col-span-12 sm:col-span-12">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="flex">
                  <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mr-4" %>
                  <%= f.label :remember_me, class: "form-label"  %>
                </div>
              <% end %>

              <div class="col-span-12 sm:col-span-12 text-right">
                <%= f.submit "Log in", class: "inline-flex justify-center btn-main" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
